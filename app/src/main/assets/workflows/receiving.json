{
  "title": "Receiving Workflow",
  "steps": [
    {
      "id": "scan_postal",
      "label": "1. Postal Code",
      "type": "action",
      "action": "capture_barcode",
      "dataKey": "postal_barcode",
      "colors": {
        "pending": "#424242",
        "active": "#FF9800",
        "done": "#4CAF50"
      }
    },
    {
      "id": "client_info",
      "label": "2. Client",
      "type": "shipment_select",
      "dataKey": "client_details",
      "autoOpen": true,
      "colors": {
        "pending": "#424242",
        "active": "#FFCA28",
        "done": "#4CAF50"
      },
      "uiSchema": {
        "sections": [
          {
            "type": "section",
            "title": "Manual Entry",
            "components": [
              {
                "type": "info_row",
                "label": "Postal Barcode",
                "variable": "postal_barcode"
              },
              {
                "type": "text_input",
                "key": "client_name",
                "label": "Client Name",
                "placeholder": "Enter client name"
              },
              {
                "type": "text_input",
                "key": "client_address",
                "label": "Address",
                "placeholder": "Enter address"
              },
              {
                "type": "date_input",
                "key": "arrival_date",
                "label": "Arrival Date",
                "default": "today"
              }
            ]
          },
          {
            "type": "spacing",
            "height": 12
          },
          {
            "type": "button",
            "label": "Continue",
            "action": "close_modal",
            "primary": true
          }
        ]
      }
    },
    {
      "id": "photo_box",
      "label": "3. Box Photo",
      "type": "action",
      "action": "capture_photo",
      "dataKey": "box_photo",
      "colors": {
        "pending": "#424242",
        "active": "#FF9800",
        "done": "#4CAF50"
      }
    },
    {
      "id": "device_info",
      "label": "4. Contents",
      "type": "contents_grid",
      "dataKey": "device_details",
      "colors": {
        "pending": "#424242",
        "active": "#FFCA28",
        "done": "#4CAF50"
      },
      "items": [
        {"key": "device", "label": "Device", "scannable": true},
        {"key": "psu", "label": "Power Supply", "scannable": true},
        {"key": "cable", "label": "Cable", "scannable": false}
      ],
      "packaging": {
        "key": "packaging",
        "label": "Packaging",
        "options": [
          {"value": "client_box", "label": "Client Box"},
          {"value": "our_box", "label": "Our Box"},
          {"value": "transport_box", "label": "Transport Box"},
          {"value": "none", "label": "None"}
        ]
      }
    },
    {
      "id": "photo_device",
      "label": "5. Dev Photo",
      "type": "action",
      "action": "capture_photo",
      "dataKey": "device_photo",
      "colors": {
        "pending": "#424242",
        "active": "#FF9800",
        "done": "#4CAF50"
      }
    }
  ]
}
